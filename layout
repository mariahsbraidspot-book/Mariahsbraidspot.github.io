Â Â Â Â Â Â } else {
Â Â Â Â Â Â Â Â cartItems.innerHTML = cart.map(item => `
Â Â Â Â Â Â Â Â Â Â <div class="flex justify-between items-center py-2 border-b border-gray-600">
Â Â Â Â Â Â Â Â Â Â Â Â <span class="text-white">${item.name} x${item.quantity}</span>
Â Â Â Â Â Â Â Â Â Â Â Â <div class="flex items-center space-x-3">
Â Â Â Â Â Â Â Â Â Â Â Â Â Â <span class="text-pastel-pink">$${(item.price * item.quantity).toFixed(2)}</span>
Â Â Â Â Â Â Â Â Â Â Â Â Â Â <button type="button" onclick="removeFromCart('${item.name}')" class="text-red-400 hover:text-red-300" aria-label="Remove ${item.name}">
Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â Â </svg>
Â Â Â Â Â Â Â Â Â Â Â Â Â Â </button>
