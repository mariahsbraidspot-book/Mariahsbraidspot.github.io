Â Â Â Â Â Â Â Â Â Â </div>
Â Â Â Â Â Â Â Â `).join('');

Â Â Â Â Â Â Â Â cartTotal = cart.reduce((t, i) => t + (i.price * i.quantity), 0);
Â Â Â Â Â Â Â Â checkoutBtn.disabled = false;
Â Â Â Â Â Â Â Â checkoutBtn.classList.remove('opacity-50');
Â Â Â Â Â Â }

Â Â Â Â Â Â cartTotalElement.textContent = cartTotal.toFixed(2);
Â Â Â Â }

Â Â Â Â function checkout() {
Â Â Â Â Â Â if (cart.length > 0) {
Â Â Â Â Â Â Â Â showSuccessModal(`Order placed successfully! Total: $${cartTotal.toFixed(2)}. You'll receive a confirmation email shortly.`);
Â Â Â Â Â Â Â Â cart = [];
Â Â Â Â Â Â Â Â updateCartDisplay();
Â Â Â Â Â Â }
Â Â Â Â }

Â Â Â Â // Modal
Â Â Â Â function showSuccessModal(message) {
Â Â Â Â Â Â document.getElementById('successMessage').textContent = message;
Â Â Â Â Â Â document.getElementById('successModal').classList.remove('hidden');
Â Â Â Â }
Â Â Â Â function closeModal() {
Â Â Â Â Â Â document.getElementById('successModal').classList.add('hidden');
Â Â Â Â }
Â Â Â Â document.getElementById('successModal').addEventListener('click', function (e) {
Â Â Â Â Â Â if (e.target === this) closeModal();
Â Â Â Â });

Â Â Â Â // On load: show section based on hash (default home)
Â Â Â Â function initFromHash() {
Â Â Â Â Â Â const hash = (location.hash || '#home').replace('#', '');
Â Â Â Â Â Â const allowed = ['home', 'services', 'booking', 'shop', 'policies'];
Â Â Â Â Â Â showSection(allowed.includes(hash) ? hash : 'home');
Â Â Â Â }
Â Â Â Â window.addEventListener('hashchange', initFromHash);
Â Â Â Â // Initialize
